# ===========================================
# RottenBrains Environment Variables
# Copy this file to .env.local and fill in values
# ===========================================

# TMDB API
NEXT_PUBLIC_TMDB_API_KEY=your_tmdb_api_key

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Production (Vercel)
VERCEL_URL=

# ===========================================
# Development Options
# ===========================================

# Offline Development Mode
# Set to "true" to use mock data instead of real APIs
# Allows UI/feature development without internet
NEXT_PUBLIC_OFFLINE_MODE=false

# VPN Detection Testing (development only)
# Set to your public IP to test VPN detection locally
NEXT_PUBLIC_TEST_IP=
